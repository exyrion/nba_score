<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <AutoCompleteTextView
        android:id="@+id/team1_textviewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/team1F"
        android:inputType="textAutoComplete"
        android:ems="10" />

    <TextView
        android:id="@+id/score1F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score1_textviewF"
        android:layout_alignParentLeft="true"
        android:text="Score: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <AutoCompleteTextView
        android:id="@+id/team2_textviewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/team1_textviewF"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/score1_textviewF"
        android:inputType="textAutoComplete"
        android:ems="10" />

    <TextView
        android:id="@+id/team2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/team2_textviewF"
        android:layout_toLeftOf="@+id/team1_textviewF"
        android:text="Team 2: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/score1_textviewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/score2_textviewF"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:layout_below="@+id/team1_textviewF"
        android:ems="10" />

    <EditText
        android:id="@+id/score2_textviewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/team2_textviewF"
        android:layout_toRightOf="@+id/score2F"
        android:inputType="number"
        android:ems="10" />

    <TextView
        android:id="@+id/score2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score2_textviewF"
        android:layout_alignParentLeft="true"
        android:text="Score: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/team1F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/team1_textviewF"
        android:layout_alignParentLeft="true"
        android:text="Team 1: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
